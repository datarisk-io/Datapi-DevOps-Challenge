  required_version = ">=1.5"

  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~>3.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~>3.0"
    }
  }
  backend "azurerm" {
    resource_group_name  = "tfstate"
    storage_account_name = "tfstate24650"
    container_name       = "tfstate"
    key                  = "datapi/terraform.tfstate"
  }
}

provider "azurerm" {
  features {}
}